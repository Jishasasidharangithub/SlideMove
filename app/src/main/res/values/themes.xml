<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SlideMove" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="actionBarItemBackground">
        <item name="android:theme">@style/actionBarSelectableItemTheme</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>

    <style name="actionBarSelectableItemTheme">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="heavyLargeTextBold">

