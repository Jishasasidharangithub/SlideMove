<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_10sdp">

    <ImageView
        android:id="@+id/iv_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jisha.slidemove.utils.GradientCardView
        android:id="@+id/cvPearl"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="@android:color/transparent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pearl"
        style="@style/normalTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/pearl"
        app:layout_constraintEnd_toEndOf="@+id/cvPearl"
        app:layout_constraintStart_toStartOf="@+id/cvPearl"
        app:layout_constraintTop_toBottomOf="@+id/cvPearl" />

    <TextView
        android:id="@+id/tv_you_are_here"
        style="@style/verySmallTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/you_are_here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_pearl"
        app:layout_constraintStart_toStartOf="@+id/tv_pearl"
        app:layout_constraintTop_toBottomOf="@+id/tv_pearl" />

</androidx.constraintlayout.widget.ConstraintLayout>